<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDescription">

    <TextView
        android:id="@+id/desc_tv_movie_release_year"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/desc_tv_movie_rating"
        app:layout_constraintStart_toStartOf="@+id/desc_tv_movie_rating"
        app:layout_constraintTop_toBottomOf="@+id/desc_tv_movie_rating" />

    <TextView
        android:id="@+id/desc_tv_movie_rating"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/desc_tv_movie_name"
        app:layout_constraintStart_toStartOf="@+id/desc_tv_movie_name"
        app:layout_constraintTop_toBottomOf="@+id/desc_tv_movie_name" />

    <ImageView
        android:id="@+id/desc_iv_movie_image"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/desc_tv_movie_name"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_iv_movie_image" />

    <TextView
        android:id="@+id/desc_tv_movie_description"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/desc_tv_movie_release_year"
        app:layout_constraintStart_toStartOf="@+id/desc_tv_movie_release_year"
        app:layout_constraintTop_toBottomOf="@+id/desc_tv_movie_release_year" />
</androidx.constraintlayout.widget.ConstraintLayout>